#
# [Mac OS X] Aliases
#

alias ls='ls -G'
alias ll='ls -ahl'
alias vim='/usr/local/bin/vim'
alias vimdiff='/usr/local/bin/vimdiff'
alias d='cd $HOME/Dev'
alias rc=". $HOME/.profile"
alias sha='$HOME/.ssh/ssh-add'
alias sp='ssh -D8080 node1'
alias chrome='open -a "/Applications/Google Chrome.app"'
alias findd='find . -type d -name'
alias findf='find . -type f -name'
alias x509='openssl x509 -noout -text -in'
alias telnets='/usr/local/Cellar/openssl/1.0.2t/bin/openssl s_client -connect'
