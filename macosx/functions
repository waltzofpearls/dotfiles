#
# [Mac OS X] Functions
#

g() {
  grep -irn --color $1 .
}

dm() {
  docker run \
    -v /var/run/docker.sock:/var/run/docker.sock \
    -v /var/lib/docker:/var/lib/docker \
    --rm martin/docker-cleanup-volumes \
    --dry-run
}

ci() {
  local date_string=`date -jf '%F %T' '$1' '+%a %b %d %T %Y %z'`
  GIT_COMMITTER_DATE="$date_string" git commit --date="$date_string"
}
