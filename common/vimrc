" ------------------------------ KeyMappings::Begin ------------------------------
map Q :nohlsearch<CR>

syntax on

map ,d :!git diff % <CR>

imap jj <Esc>

noremap <S-Enter> O<Esc>

nnoremap <f3> :!ctags -R<CR>
nnoremap <C-j> :m .+1<CR>==
nnoremap <C-k> :m .-2<CR>==
inoremap <C-j> <Esc>:m .+1<CR>==gi
inoremap <C-k> <Esc>:m .-2<CR>==gi

vnoremap <Tab> :call Tab() <CR>
nnoremap <Tab> :call Tab() <CR>

function! Tab()
    let col = col(".")
    let line = line(".")
    normal %
    if (col == col(".") && line == line("."))
        normal $
    endif
endfunction
